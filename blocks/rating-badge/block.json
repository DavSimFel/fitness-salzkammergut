  "category": "widgets",
  "icon": "star-filled",
  "textdomain": "fitness-skg",
  "attributes": {
    "placeId": {
      "type": "string",
      "default": ""
    },
    "showLogo": {
      "type": "boolean",
      "default": true
    },
    "size": {
      "type": "string",
      "default": "medium"
    }
  },
  "supports": {
    "html": false,
    "align": ["left", "center", "right", "wide", "full"],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "text": true,
      "background": true
    },
    "typography": {
      "fontSize": true
    },
    "shadow": true
  },
  "editorScript": "fitness-skg-review-blocks"
}
